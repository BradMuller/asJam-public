package screens {	import flash.display.MovieClip;		public class Screen extends MovieClip{		public function Screen() {			// constructor code			super();		}				protected function recursivelyFindButtonsByName(movieClip, searchName){			var results = [];			for( var i = 0; i < movieClip.numChildren; i++ ){				var child = movieClip.getChildAt(i);				if( child is MovieClip ){					if( child.name == searchName ){						results.push( child );					}					results = results.concat(this.recursivelyFindButtonsByName( child, searchName ));				}			}			return results;		}				protected function getButtons(searchName){			return this.recursivelyFindButtonsByName(this, searchName);		}				protected function getButton(searchName){			var buttons = this.getButtons(searchName);			if( buttons.length > 0 ){				return buttons[0];			}else{				return null;			}		}				protected function wireUpButtons(searchName, callbackFunction){			this.getButtons(searchName).forEach( function(button){				button.onClick = callbackFunction;				trace("set: " + button.onClick);			});		}	}	}