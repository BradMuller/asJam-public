package  {		import flash.display.MovieClip;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.events.TouchEvent;		public class Button extends MovieClip {						public function Button() {			// constructor code			return;			stop();			this.addEventListener( MouseEvent.MOUSE_DOWN, this.onInputBegin );			this.addEventListener( MouseEvent.MOUSE_UP, this.onInputEnd );			this.addEventListener( TouchEvent.TOUCH_BEGIN, this.onInputBegin );			this.addEventListener( TouchEvent.TOUCH_END, this.onInputEnd );					}				public function onInputBegin( event:Event ):void{			this.gotoAndStop("down");		}				public function onInputEnd( event:Event ):void{			this.gotoAndStop("up");		}	}	}